generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     Role
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
    failedAttempts  Int       @default(0) // Số lần đăng nhập sai
  lockedUntil     DateTime? // Thời gian khóa tài khoản nếu quá nhiều lần đăng nhập sai

}

enum Role {
  SuperAdmin
  Admin
  Viewer
}


model Setting {
  id           Int     @id @default(autoincrement())
  oriagentToken String? @unique
}